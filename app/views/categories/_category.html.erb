
<div class="list-group">

 <a href="categories/<%= category.id %>/movies" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
  <div class="d-flex gap-2 w-100 justify-content-between">

    <div>
      <div class="text-end">
      <h6 class="mb-0"><%= category.name %></h6>
    </div>
  </div>
  </div>
    <%- if @current_user&.admin %>
     <%= link_to edit_category_path(category.id) do %>
      <button type="button" class="btn btn-primary me-2">Edit</button>
     <% end %>
     <div class="text-end">
       <%= button_to "Delete", category_path(category.id), method: :delete, form: {turbolink: false}, class: "btn btn-primary me-2" %>
     </div>
   <% end %>
 </a>
</div>
<div class="b-example-divider"></div>
